{
  "build": {
    "beforeDevCommand": "npm run vite:dev",
    "beforeBuildCommand": "npm run vite:build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "aimcamp-player-agent",
    "version": "1.3.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "window": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true,
        "execute": false,
        "sidecar": false,
        "scope": []
      },
      "dialog": {
        "all": true
      },
      "fs": {
        "all": true,
        "scope": ["$DOWNLOAD/*", "$DESKTOP/*", "$DOCUMENT/*", "$APPDATA/*", "$LOCALAPPDATA/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "© 2024-2026 Rqdiniz (bu-) — aim.camp",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/icon.ico"
      ],
      "identifier": "com.aimcamp.playeragent",
      "longDescription": "CS2 system optimizer, CFG manager, hardware scanner and benchmark tool by Rqdiniz (bu-) — aim.camp community.",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "aim.camp Player Agent — CS2 optimizer by Rqdiniz",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "http://timestamp.digicert.com",
        "wix": {
          "language": "pt-BR"
        }
      }
    },
    "security": {
      "csp": "default-src 'self'; script-src 'self'; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: blob:; connect-src 'self' https://api.groq.com https://api.openai.com https://openrouter.ai https://generativelanguage.googleapis.com https://api.mistral.ai http://localhost:11434 ipc: tauri:"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": true,
        "maximized": false,
        "height": 1080,
        "resizable": false,
        "title": "aim.camp Player Agent",
        "width": 1920,
        "decorations": false,
        "center": true,
        "minWidth": 900,
        "minHeight": 600
      }
    ]
  }
}
